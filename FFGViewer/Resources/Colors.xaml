<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Material Blue palette -->
    <Color x:Key="PrimaryBlue">#FF1976D2</Color>
    <Color x:Key="PrimaryBlueDark">#FF1565C0</Color>
    <Color x:Key="PrimaryBlueLight">#FF42A5F5</Color>
    <Color x:Key="BackgroundGray">#FFF5F5F5</Color>
    <Color x:Key="ToolbarBg">#FFE3F2FD</Color>
    <Color x:Key="StatusBarBg">#FFBBDEFB</Color>
    <Color x:Key="TextPrimary">#FF212121</Color>
    <Color x:Key="TextSecondary">#FF757575</Color>

    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="PrimaryBlueDarkBrush" Color="{StaticResource PrimaryBlueDark}"/>
    <SolidColorBrush x:Key="BackgroundGrayBrush" Color="{StaticResource BackgroundGray}"/>
    <SolidColorBrush x:Key="ToolbarBgBrush" Color="{StaticResource ToolbarBg}"/>
    <SolidColorBrush x:Key="StatusBarBgBrush" Color="{StaticResource StatusBarBg}"/>

</ResourceDictionary>
