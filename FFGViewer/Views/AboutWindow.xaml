<Window x:Class="FFGViewer.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About FFGViewer"
        Width="400" Height="320"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Icon="../Resources/Icons/app.ico">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Colors.xaml"/>
                <ResourceDictionary Source="../Resources/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGrayBrush}" Margin="24,20,24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: アイコン + アプリ名 + バージョン -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <Image Source="../Resources/Icons/app.ico" Width="48" Height="48"
                   VerticalAlignment="Center" Margin="0,0,16,0"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="AppNameText"
                           FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBlueBrush}"/>
                <TextBlock x:Name="VersionText"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,2,0,0"/>
                <TextBlock x:Name="BuildDateText"
                           FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1" x:Name="DescriptionText"
                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                   TextWrapping="Wrap" Margin="0,0,0,12"/>

        <!-- Author / License -->
        <StackPanel Grid.Row="2">
            <Separator Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Author" Grid.Column="0"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock x:Name="AuthorText" Grid.Column="1"
                           FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
            </Grid>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Org." Grid.Column="0"
                           FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock x:Name="OrgText" Grid.Column="1"
                           FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
            </Grid>
            <Separator Margin="0,0,0,10"/>
            <TextBlock Text="MIT License" FontSize="12" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,2"/>
            <TextBlock x:Name="CopyrightText"
                       FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Close ボタン -->
        <Button Grid.Row="3" Content="Close"
                Style="{StaticResource PrimaryButton}"
                Width="100" HorizontalAlignment="Center"
                Margin="0,12,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
